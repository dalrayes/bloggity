<h1>Create Article</h1>

<%= form_for @article, url: {action: "update"} do |f| %>
<p><%= f.text_field :title, value: @article.title %></p>
<p><%= f.text_area :body, size: "150x22", value: @article.body %></p>
<p><%= f.submit "Edit Article" %></p>

<%end%>
  <p><%=link_to 'Delete article', article_path, :method => :delete%></p>